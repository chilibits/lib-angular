{
  "name": "@fabula/angular",
  "description": "Fabula UI Angular library",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "start-storybook -p 8008",
    "build": "ng build",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "jest:ui": "jest -c tests/ui/jest.config.js",
    "jest:ui:update": "jest -c tests/ui/jest.config.js --updateSnapshot",
    "test:ui": "PORT=8008 start-server-and-test storybook:ci http-get://localhost:8008 jest:ui",
    "test:ui:update": "PORT=8008 start-server-and-test storybook:ci http-get://localhost:8008 jest:ui:update",
    "storybook": "start-storybook -p 8008",
    "storybook:ci": "start-storybook -p 8008 --ci"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "~7.3.5",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@angularclass/hmr": "^2.1.3",
    "@babel/core": "^7.10.2",
    "@ngxs/hmr-plugin": "^3.6.2",
    "@ngxs/store": "^3.6.2",
    "@storybook/angular": "^5.3.19",
    "@types/jasmine": "^3.5.11",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^26.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^8.9.5",
    "babel-loader": "^8.1.0",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^26.1.0",
    "jest-image-snapshot": "^4.0.2",
    "jest-preset-angular": "^8.2.1",
    "jest-puppeteer": "^4.4.0",
    "ng-packagr": "^4.2.0",
    "protractor": "~5.4.0",
    "puppeteer": "^3.3.0",
    "sass-loader": "7.3.1",
    "start-server-and-test": "^1.11.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "projects/fabula"
    ],
    "transform": {
      "\\.(svg)$": "<rootDir>/tests/unit/svgMock.js",
      "^.+\\.(ts|js|html)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@assets/(.*)": "<rootDir>/src/assets/$1",
      "@core/(.*)": "<rootDir>/src/app/core/$1",
      "@env": "<rootDir>/src/environments/environment",
      "@src/(.*)": "<rootDir>/src/src/$1",
      "@state/(.*)": "<rootDir>/src/app/state/$1",
      "^.+\\.svg$": "<rootDir>/tests/unit/svgMock.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  }
}
